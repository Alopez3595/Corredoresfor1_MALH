<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Corredoresfor1_MALH.View.Vcorredor">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Inventario" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Registrar corredor" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="Nombre corredor" Text="{Binding Nombre}"/>
            <Entry Placeholder="Numero" Text="{Binding Numero}"/>
            <Entry Placeholder="Equipo" Text="{Binding Equipo}"/>
            <Button Text="Registra" Command="{Binding InsertarCorredor}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>